{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "Inspector",
  "colors": {
    "primary": "#0084FF",
    "light": "#0084FF",
    "dark": "#000000"
  },
  "favicon": "/favicon.png",
  "fonts": {
    "heading": {
      "family": "SF Pro Display",
      "weight": 600
    }
  },
  "styling": {
    "codeblocks": {
      "theme": {
        "light": "github-light",
        "dark": "github-dark"
      }
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "welcome",
              "quickstart",
              "installation",
              "connecting-ai-agents"
            ]
          },
          {
            "group": "Using Inspector",
            "pages": [
              "using-inspector/visual-editor",
              "using-inspector/chat"
            ]
          },
          {
            "group": "Configuration",
            "pages": [
              "configuration/inspector-json",
              "configuration/inspectorrules",
              "configuration/inspectorignore"
            ]
          },
          {
            "group": "Git & GitHub",
            "pages": [
              "git/github"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Website",
          "href": "https://tryinspector.com",
          "icon": "globe"
        },
        {
          "anchor": "Discord",
          "href": "https://discord.gg/inspector",
          "icon": "discord"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/logo.svg",
    "dark": "/logo/logo.svg",
    "href": "https://tryinspector.com"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://discord.gg/y7JMaAyqTp"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Download",
      "href": "/installation"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/tryinspector",
      "github": "https://github.com/sandbox-technologies/",
      "discord": "https://discord.gg/y7JMaAyqTp"
    }
  },
  "redirects": [
    {
      "source": "/",
      "destination": "/welcome"
    },
    {
      "source": "/index",
      "destination": "/welcome"
    }
  ]
}
